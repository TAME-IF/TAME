action general a_quit named "quit";
action general a_test1 named "test1";
action general a_test2 named "test2";
action general a_test3 named "test3";
action general a_test4 named "test4";

object o_counter
{
	init()
	{
		x = 0;
	}
	
	procedure("Increment")
	{
		x = x + 1;
	}

	procedure("Reset")
	{
		x = 0;
	}
	
}

object o_counter2
{
	init()
	{
		x = 0;
	}
	
	procedure("Increment")
	{
		x = x + 1;
	}

}

world 
{
	onAction(a_test1)
	{
		textln("Calling procedure...");
		callFromMaybe(o_counter, "Increment");
		textln("Counter is now "+o_counter.x);
	}

	onAction(a_test2)
	{
		textln("Calling procedure...");
		callFromMaybe(o_counter, "Reset");
		textln("Counter is now "+o_counter.x);
	}

	onAction(a_test3)
	{
		textln("Calling procedure...");
		callFromMaybe(o_counter2, "Increment");
		textln("Counter2 is now "+o_counter2.x);
	}
	
	onAction(a_test4)
	{
		textln("Calling procedure...");
		callFromMaybe(o_counter2, "Reset");
		textln("Counter2 is now "+o_counter2.x);
	}
	
	onAction(a_quit)
	{
		quit;
	}
	
	afterModuleInit()
	{
		textln("Type \"test1\", \"test2\", \"test3\", or \"test4\" to test.");
		textln("\"test4\" should not change anything.");
	}	

}
