action general a_quit named "quit";
action general a_test1 named "test1";
action general a_test2 named "test2";

world
{
	procedure("TestProcedure")
	{
		textln("Called TestProcedure!");
	}

	onAction(a_test1)
	{
		textln("Calling procedures...");
		call("TestProcedure");
		call("AnotherProcedure");
	}

	onAction(a_test2)
	{
		textln("Calling procedures...");
		callMaybe("TestProcedure");
		callMaybe("AnotherProcedure");
	}

	onAction(a_quit)
	{
		quit;
	}
	
	afterModuleInit()
	{
		textln("Type \"test1\" or \"test2\" to test.");
		textln("One of \"test1\"'s calls should throw an error.");
		textln("One of \"test2\"'s calls should not.");
	}	
	
}
